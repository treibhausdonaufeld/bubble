# General configuration for running all in docker
# ------------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.local

USE_DOCKER=yes
IPYTHONDIR=/app/.ipython
# Redis
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=bubble
POSTGRES_USER=postgres
POSTGRES_PASSWORD=local-dev-password

# Celery
# ------------------------------------------------------------------------------

# Flower
CELERY_FLOWER_USER=flower
CELERY_FLOWER_PASSWORD=flower
DATABASE_URL=postgres://postgres:local-dev-password@postgres:5432/bubble

# Authentik OAuth (local development placeholders)
# ------------------------------------------------------------------------------
# AUTHENTIK_CLIENT_ID=local-dev-client-id
# AUTHENTIK_SECRET=local-dev-secret
# AUTHENTIK_SERVER_URL=http://localhost:9000

ACCOUNT_ALLOW_REGISTRATION=True
ACCOUNT_EMAIL_VERIFICATION=False
SOCIALACCOUNT_ONLY=False
